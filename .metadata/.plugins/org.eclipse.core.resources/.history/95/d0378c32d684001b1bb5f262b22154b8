package br.edu.faeterj.provas.av1;

public class Aviao {

	public static int frota;
	private String prefixo;
	private String modelo;
	private String fabricante;
	private Boolean estarVoando = false;

	public Aviao() {
		frota++;
	}

	public Aviao(String prefixo, String modelo, String fabricante) {
		frota++;
		this.prefixo = prefixo;
		this.modelo = modelo;
		this.fabricante = fabricante;
	}

	public static int getFrota() {
		return frota;
	}

	public String getPrefixo() {
		return prefixo;
	}

	public void setPrefixo(String prefixo) {
		this.prefixo = prefixo;
	}

	public String getModelo() {
		return modelo;
	}

	public void setModelo(String modelo) {
		this.modelo = modelo;
	}

	public String getFabricante() {
		return fabricante;
	}

	public void setFabricante(String fabricante) {
		this.fabricante = fabricante;
	}

	public Boolean getEstarVoando() {
		return estarVoando;
	}

	public void levantarVoo() {
		if (estarVoando == false) {
			estarVoando = true;
			System.out.println("VOO AUTORIZADO\nPREPARANDO PARA VOAR\nESTAMOS VOANDO...");

		} else {
			System.out.println("NAO E POSSIVEL INICIAR VOO");

		}
	}

	public void pousar() {
		if (estarVoando == true) {
			estarVoando = false;
			System.out.println("INICIANDO POUSO\nPOUSO CONCLUIDO");

		} else {
			System.out.println("NAO ESTAMOS VOOANDO");

		}
	}

	@Override
	public String toString() {
		return "\nAviao\n" + "Caracteristicas:\n" + "prefixo = " + prefixo + ", modelo = " + modelo + ", fabricante = "
				+ fabricante + "\nEstado Atual:\n" + "Voando = " + estarVoando;
	}

}
